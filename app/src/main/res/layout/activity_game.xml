<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.GameActivity">

    <TextView
        android:id="@+id/txt_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/top_header_game"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/img_card_deck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/card_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="60dp"/>

    <Button
        android:id="@+id/btn_end_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_game_text"
        android:textSize="20sp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/nice_red"/>

</androidx.constraintlayout.widget.ConstraintLayout>